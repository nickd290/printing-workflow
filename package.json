{
  "name": "printing-workflow",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "docker compose up -d && pnpm db:generate && pnpm db:push && pnpm db:seed",
    "dev": "turbo dev",
    "dev:all": "concurrently \"pnpm --filter api dev\" \"pnpm dev:workers\" \"pnpm --filter web dev\"",
    "dev:workers": "cd apps/api && tsx src/workers/index.ts",
    "build": "turbo build",
    "test": "pnpm --filter api test && pnpm --filter web test",
    "test:e2e": "playwright test",
    "lint": "turbo lint",
    "db:generate": "cd packages/db && pnpm db:generate",
    "db:push": "cd packages/db && pnpm db:push",
    "db:migrate": "cd packages/db && pnpm db:migrate",
    "db:seed": "cd packages/db && pnpm db:seed",
    "db:studio": "cd packages/db && pnpm db:studio",
    "db:reset": "pnpm db:push --force-reset && pnpm db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
