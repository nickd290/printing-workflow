{
  "name": "printing-workflow",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "docker compose up -d && pnpm db:generate && pnpm db:push && pnpm db:seed",
    "dev": "turbo dev",
    "dev:all": "concurrently \"pnpm --filter api dev\" \"pnpm dev:workers\" \"pnpm --filter web dev\"",
    "dev:workers": "cd apps/api && tsx src/workers/index.ts",
    "start:clean": "bash scripts/dev-start.sh",
    "status": "bash scripts/dev-status.sh",
    "status:watch": "bash scripts/dev-status.sh --watch",
    "status:logs": "bash scripts/dev-status.sh --logs",
    "clean": "bash scripts/cleanup-ports.sh",
    "clean:all": "bash scripts/cleanup-ports.sh --all",
    "build": "pnpm db:generate && turbo build",
    "test": "pnpm --filter api test && pnpm --filter web test",
    "test:e2e": "playwright test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "cd packages/db && pnpm db:generate",
    "db:push": "cd packages/db && pnpm db:push",
    "db:migrate": "cd packages/db && pnpm db:migrate",
    "db:seed": "cd packages/db && pnpm db:seed",
    "db:studio": "cd packages/db && pnpm db:studio",
    "db:reset": "pnpm db:push --force-reset && pnpm db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.18.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "xlsx": "^0.18.5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
