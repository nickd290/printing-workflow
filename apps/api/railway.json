{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm db:generate && pnpm build --filter=@printing-workflow/api..."
  },
  "deploy": {
    "startCommand": "pnpm --filter=@printing-workflow/api start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
