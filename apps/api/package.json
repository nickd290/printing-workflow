{
  "name": "@printing-workflow/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": { "node": ">=20" },
  "scripts": {
    "dev": "tsx watch --env-file=../../.env src/index.ts",
    "workers": "tsx --env-file=../../.env src/start-workers.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.2.1",
    "@printing-workflow/db": "workspace:*",
    "@printing-workflow/shared": "workspace:*",
    "@prisma/client": "^6.1.0",
    "@sendgrid/mail": "^8.1.6",
    "@t3-oss/env-core": "^0.11.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/pdf-parse": "^1.1.5",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "bullmq": "^5.61.0",
    "fastify": "^5.2.0",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "openai": "^4.76.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.3.11",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "resend": "^4.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
